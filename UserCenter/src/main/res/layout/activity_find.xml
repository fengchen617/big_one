<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".inituser.FindActivity">
    <EditText
        android:id="@+id/select_find_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的手机号："/>
    <EditText
        android:id="@+id/select_find_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的验证码："/>
    <EditText
        android:id="@+id/select_find_new_possword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的新密码"/>
    <EditText
        android:id="@+id/select_find_two_possword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="再次确定密码"/>
    <Button
        android:id="@+id/select_find_commit"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="提交"/>
</LinearLayout>