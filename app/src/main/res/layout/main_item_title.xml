<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/main_title_img"
        android:layout_margin="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/main_title_search"
        android:layout_toRightOf="@+id/main_title_img"
        android:layout_margin="5dp"
        android:layout_width="300dp"
        android:background="@drawable/main_item_title_search"
        android:layout_height="35dp"/>
    <ImageView
        android:id="@+id/main_sao_img"
        android:src="@drawable/ic_action_sao"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
</RelativeLayout>