<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/main_item_title"/>
    <TextView
        android:background="#9A000000"
        android:textColor="#ffffff"
        android:id="@+id/main_time_text"
        android:layout_marginTop="360dp"
        android:layout_width="200dp"
        android:text="我的活动"
        android:drawableRight="@drawable/time"
        android:layout_height="wrap_content"/>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/main_time_re"
       android:layout_marginTop="380dp"
       android:layout_width="200dp"
       android:layout_height="200dp"/>
    <com.bawei6.bigone.custom.Custom_Bottom
        android:id="@+id/main_bb"
        android:layout_margin="30dp"
        app:app_img_one="@drawable/ac"
        app:app_img_two="@drawable/ad"
        app:app_img_five="@drawable/aa"
        app:app_img_four="@drawable/ab"
        app:app_img_three="@drawable/ae"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="100dp"/>
</FrameLayout>